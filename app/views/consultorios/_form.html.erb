<%= form_for(@consultorio, html:{class: "ui form cita-form"}) do |f| %>
  <% if @consultorio.errors.any? %>
    <div class="ui negative message">
      <div class="header">
        Tiene <%= pluralize(@consultorio.errors.count, "error") %>: 
        </div>
        <ul class="list">      
          <% @consultorio.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>      
        </ul>
        </div>
  <% end %>

 <div class="five wide required field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
  </div>
  <div class="actions">
   <div class="ui buttons">
      <%= link_to 'Atras', request.referer, :class =>"ui button"%>
       <div class="or" data-text="O"></div>
      <%= f.submit "Guardar Consultorio", :class =>"ui positive button"  %>
    </div>
  </div>
<% end %>
