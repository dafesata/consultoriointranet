<div class="ui two column left aligned grid ">

<%if flash[:notice]%>
<div class="ui warning message">
<div class="header">Notificacion</div>
<p><%= notice %></p>
</div>

<% end %>
<div class="one wide column"></div>
<div class="column">
<h1>Listado de Pacientes</h1>

<table class="ui single line celled table">
  <thead>
    <tr>
      <th>Numero</th>
      <th>Nombres</th>
      <th>Apelllidos</th>
      <th>Tipo de Usuario</th>
      <th>EPS</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.numero_id %></td>
        <td><%= paciente.persona.nombres %></td>
        <td><%= paciente.persona.apellidos %></td>
        <td><%= paciente.tipo_usuario %></td>
        <td><%= Ep.where(codigo_eps: paciente.eps_id).select(:nombre).first.nombre %></td>
        <td><%= link_to 'Ver', paciente %></td>
        <td><%= link_to 'Editar', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Borrar', paciente, method: :delete, data: { confirm: 'Â¿Seguro/a desea eliminar este paciente?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Regresar', pacientes_path %>

</div>
</div>
