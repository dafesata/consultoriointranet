<div class="ui one column center aligned grid">	
 		<div class="column">
			<h1>Servicios </h1>
		</div>     

<%if can? :create, Especialidad %>
<div class="seven wide computer column">
	<div class="ui green segment">
		<%= link_to new_especialidad_path do%>
			<h2 class="ui center aligned icon header">		
				<%= image_tag("new.jpeg", :class => "ui centered tiny rounded image")%>
				<div class="content">Crear Servicio</div> 		
			</h2>		
		<%end%>
	</div>
</div>
<% end%>

<%if can? :list, Especialidad %>
<div class="seven wide computer column">
	<div class="ui green segment">
	<%= link_to list_especialidads_path do%>		
		<h2 class="ui center aligned icon header">
			<%= (image_tag("list.jpg", :class => "ui centered tiny rounded image")) %>
			<div class="content">
				Listar Servicios
			</div>
		</h2>
	<%end%>		
	</div>
</div>
<% end%>

<%if can? :list, Especialidad%>
<div class="seven wide computer column">
	<div class="ui green segment">			
		<h2 class="ui center aligned icon header">
			<%= (image_tag("search.jpg", :class => "ui centered tiny rounded image")) %>
			<div class="content">
				Buscar Servicio			
			</div>
		</h2>
		
		<%= form_tag(list_especialidads_path, :method => "get", id: "search-form", class: "ui form search-divpa") do %>
		<div class="ui one column centered grid">	
			<div class="row"></div>
			<div class="five wide field">
				<%=label_tag :s_especialidad,"Servicio"%>
			  	<%= text_field_tag :s_especialidad, params[:s_especialidad]%> 
			</div>
 			<div class="eigth wide field">
 				<%=label_tag :s_servicio,"Programa o Grupo de servicios"%>
		  		<%= text_field_tag :s_servicio, params[:s_servicio]%>  
		  	</div>		  
		</div>
		<%= submit_tag "Buscar" %>		
		<% end %>
		
		
	</div>
</div>
<% end%>

<%if can? :export, Especialidad%>
<div class="seven wide computer column">
	<div class="ui green segment">
		<h2 class="ui center aligned icon header">
			<%= (image_tag("eps.jpg", :class => "ui centered tiny rounded image")) %>
			<div class="content">
				Reportes
			</div>
		</h2>
	</div>
</div>
<% end%>




</div>
	