
<div class="column">
<h2>Iniciar Sesion</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name),html:{class: "ui form"}) do |f| %>

  <div class="field">
    <%= f.label :username, "Usuario" %>
    <div class="ui left icon input">
      <%= f.text_field :username, autofocus: true%>
      <i class="user icon"></i>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, "ContraseÃ±a" %>
    <div class="ui left icon input">
        <%= f.password_field :password, autocomplete: "off" %>
    <i class="lock icon"></i>
    </div>    
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="inline field">
      <div class="ui checkbox">
        <%= f.check_box :remember_me %> 
        <%= f.label :remember_me, "Recordarme" %>
      </div>
    </div>
  <% end -%>

  
    <%= f.submit "Iniciar Sesion", class: "ui green submit button" %>
  
<% end %>

<%= render "devise/shared/links" %>
</div>