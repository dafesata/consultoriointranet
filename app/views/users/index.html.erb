<div class="ui two column left aligned grid ">

<%if flash[:notice]%>
<div class="ui warning message">
<div class="header">Notificacion</div>
<p><%= notice %></p>
</div>
<% end %>

<div class="one wide column"></div>
<div class="column">
<h1>Listado de Usuarios</h1>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Identificacion</th>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Usename</th>
      <th>email</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.numero_id %></td>
        <td><%= user.nombres %></td>
        <td><%= user.apellidos %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>        
        <td><%= link_to 'Ver', users_admin_path(user) %></td>
        <td><%= link_to 'Editar', edit_users_admin_path(user) %></td>      
        <td><%= link_to "Eliminar", admin_destroy_user_path(user), method: :delete, data: { confirm: "Â¿Seguro/a desea eliminar este usuario?" } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

