        <td><%= link_to 'Editar', edit_servicio_path(servicio) %></td>
        <td><%= link_to 'Eliminar', servicio, method: :delete, data: { confirm: 'Â¿Seguro/a desea eliminar este Programa o Grupo?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

