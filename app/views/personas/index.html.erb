<p id="notice"><%= notice %></p>

<h1>Listing Personas</h1>

<table>
  <thead>
    <tr>
      <th>Tipoid</th>
      <th>Numero</th>
      <th>Apellidos</th>
      <th>Nombres</th>
      <th>Estado civil</th>
      <th>Fecha nac</th>      
      <th>Sexo</th>
      <th>Celular</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.tipoid %></td>
        <td><%= persona.numero_id %></td>
        <td><%= persona.apellidos %></td>
        <td><%= persona.nombres %></td>
        <td><%= persona.estado_civil %></td>
        <td><%= persona.fecha_nac %></td>        
        <td><%= persona.sexo %></td>
        <td><%= persona.celular %></td>
        <td><%= link_to 'Show', persona %></td>
        <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
        <td><%= link_to 'Destroy', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

